mixin skill(data)
    - data = data || {};
    section.skill(class = data.class role = data.role)
        .container.skill__container
            h2.skill__title.wow.fadeIn!=data.title
            p.skill__desc.wow.fadeIn!=data.description
            h3.skill__subtitle.wow.fadeIn!=data.subtitle
            .skill__body
                ul.skill__list.wow.fadeIn
                    each skill in data.companies
                        li.skill__item
                            .skill__item-icon
                                img(src = skill.icon alt='@@')
                            .skill__item-content
                                p.skill__item-content-title!=skill.title
                                span.skill__item-content-desc!=skill.description
                hr.skill__line
                ul.skill__list.wow.fadeIn
                    each skill2 in data.midCompanies
                        li.skill__item
                            .skill__item-icon.skill__item-icon_small
                                img(src = skill2.icon alt='@@')
                            .skill__item-content
                                p.skill__item-content-title!=skill2.title
                                span.skill__item-content-desc!=skill2.description
                hr.skill__line
                ul.skill__list.wow.fadeIn
                    each skill3 in data.lowCompanies
                        li.skill__item
                            .skill__item-icon.skill__item-icon_small
                                img(src = skill3.icon alt='@@')
                            .skill__item-content
                                span.skill__item-content-desc!=skill3.description