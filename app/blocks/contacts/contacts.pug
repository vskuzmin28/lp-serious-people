mixin contacts(data)
    - data = data || {};
    section.contacts(class = data.class role = data.role)
        .container.contacts__container
            .contacts__card.card.wow.fadeInDown
                h2.card__title Контакты
                ul.card__body
                    li.card__item
                        p.card__item-title Адрес офиса:
                        span.card__item-desc!=data.address
                    li.card__item
                        p.card__item-title Телефон:
                        span.card__item-desc
                            a.card__item-phone(href = data.tel)!=data.phonenumber
                    li.card__item
                        p.card__item-title Почта:
                        span.card__item-desc 
                            a.card__item-email(href = data.mailto title="")!=data.email

